{
  "manifest_version": 3,
  "name": "FormSnap",
  "version": "0.1.0",
  "description": "Collect and fill form data on any webpage.",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup/index.html",
    "default_title": "FormSnap"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
